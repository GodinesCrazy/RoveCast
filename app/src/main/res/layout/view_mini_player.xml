<?xml version="1.0" encoding="utf-8"?>
<!-- SPOTIFY-STYLE MINI PLAYER - Diseño completamente rediseñado -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/miniPlayerContainer"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="0dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone"
    app:cardBackgroundColor="#121212"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <!-- Barra de progreso ultra-fina en la parte superior (estilo Spotify) -->
        <ProgressBar
            android:id="@+id/miniPlayerProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:progressTint="#1DB954"
            android:progressBackgroundTint="#404040"
            android:secondaryProgressTint="#404040"
            android:progress="45"
            android:contentDescription="@string/cd_mini_player_progress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Album Art / Station Logo -->
        <ImageView
            android:id="@+id/miniPlayerLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_radio_placeholder"
            android:background="@drawable/bg_circle"
            android:contentDescription="@string/cd_mini_player_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/miniPlayerProgress" />
        <!-- Song/Station Title -->
        <TextView
            android:id="@+id/miniPlayerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:contentDescription="@string/cd_mini_player_title"
            app:layout_constraintBottom_toTopOf="@+id/miniPlayerStatus"
            app:layout_constraintEnd_toStartOf="@+id/miniPlayerCast"
            app:layout_constraintStart_toEndOf="@+id/miniPlayerLogo"
            app:layout_constraintTop_toBottomOf="@+id/miniPlayerProgress"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Radio Station Name" />

        <!-- Artist/Station Info -->
        <TextView
            android:id="@+id/miniPlayerStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#B3B3B3"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:contentDescription="@string/cd_mini_player_status"
            app:layout_constraintBottom_toBottomOf="@+id/miniPlayerLogo"
            app:layout_constraintEnd_toEndOf="@+id/miniPlayerTitle"
            app:layout_constraintStart_toStartOf="@+id/miniPlayerTitle"
            app:layout_constraintTop_toBottomOf="@+id/miniPlayerTitle"
            tools:text="@string/mini_player_status_live" />

        <!-- Cast Button (estilo Spotify) -->
        <androidx.mediarouter.app.MediaRouteButton
            android:id="@+id/miniPlayerCast"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:theme="@style/CastMediaRouteButton.RoveCast"
            android:contentDescription="@string/cd_mini_player_cast"
            app:layout_constraintBottom_toBottomOf="@+id/miniPlayerLogo"
            app:layout_constraintEnd_toStartOf="@+id/miniPlayerFavorite"
            app:layout_constraintTop_toTopOf="@+id/miniPlayerLogo" />

        <!-- Heart/Favorite Button (estilo Spotify) -->
        <ImageButton
            android:id="@+id/miniPlayerFavorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_favorite_border"
            android:contentDescription="@string/cd_mini_player_favorite"
            app:layout_constraintBottom_toBottomOf="@+id/miniPlayerLogo"
            app:layout_constraintEnd_toStartOf="@+id/miniPlayerPlayPause"
            app:layout_constraintTop_toTopOf="@+id/miniPlayerLogo" />

        <!-- Play/Pause Button (estilo Spotify) -->
        <ImageButton
            android:id="@+id/miniPlayerPlayPause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="0dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_arrow"
            android:scaleType="fitCenter"
            android:contentDescription="Reproducir o pausar"
            app:layout_constraintBottom_toBottomOf="@+id/miniPlayerLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/miniPlayerLogo"
            app:tint="@color/control_button_tint_spotify" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
