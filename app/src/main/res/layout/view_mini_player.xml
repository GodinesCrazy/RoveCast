<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/miniPlayerContainer"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/bg_mini_player"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:elevation="8dp"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/miniPlayerLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_radio_placeholder"
        android:contentDescription="@string/cd_station_logo" />

    <TextView
        android:id="@+id/miniPlayerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/miniPlayerStatus"
        app:layout_constraintEnd_toStartOf="@+id/miniPlayerPlayPause"
        app:layout_constraintStart_toEndOf="@+id/miniPlayerLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="No station selected" />

    <TextView
        android:id="@+id/miniPlayerStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/miniPlayerTitle"
        app:layout_constraintStart_toStartOf="@+id/miniPlayerTitle"
        app:layout_constraintTop_toBottomOf="@+id/miniPlayerTitle"
        tools:text=" " />

    <ImageButton
        android:id="@+id/miniPlayerPlayPause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_play_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/on_dark"
        android:contentDescription="@string/cd_play_pause_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
