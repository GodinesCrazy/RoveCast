<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Verde Spotify cuando está seleccionado/activo -->
    <item android:color="#1DB954" android:state_selected="true" />
    <item android:color="#1DB954" android:state_checked="true" />
    <item android:color="#1DB954" android:state_activated="true" />
    <item android:color="#1DB954" android:state_pressed="true" />
    <!-- Blanco cuando no está seleccionado/inactivo -->
    <item android:color="#FFFFFF" />
</selector>
